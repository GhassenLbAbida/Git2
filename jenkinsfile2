pipeline {
    agent any

    stages {
         stage('Initialize')
    {
        def dockerHome = tool 'MyDocker'
        def mavenHome  = tool 'MyMaven'
        env.PATH = "${dockerHome}/bin:${mavenHome}/bin:${env.PATH}"
    }
        stage('Build Docker Image') {
            steps {
                // Build Docker image
                script {
                    def customImageName = "jenkins/jenkins:latest"  // Modify this with your image name

                    sh "docker build -t ${customImageName} ."  // Build the Docker image
                }
            }
        }
    }
}
